<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/prenominput"
        android:inputType="textPersonName|textCapWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/firstname" />

    <EditText
        android:id="@+id/requesterinput"
        android:inputType="textPersonName|textCapWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prenominput"
        android:layout_alignStart="@+id/prenominput"
        android:layout_below="@+id/prenominput"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="@string/yourname" />

    <Button
        android:id="@+id/valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requesterinput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/validate" />
</RelativeLayout>